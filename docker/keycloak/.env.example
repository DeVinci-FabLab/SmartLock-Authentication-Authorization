# Keycloak Environment Variables
# Please copy this file to .env and set the appropriate values
# execute: 'cp .env.example .env'

# Default docker settings
# Id and group for file permissions
# PUID=1000
# PGID=1000
# Timezone setting
TZ=Europe/Paris
# Docker volumes path
DOCKER_VOLUMES_PATH=/mnt/pool/docker/volumes

# Database settings (CHANGE THESE IN PRODUCTION!)
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=password

# Keycloak database connection
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://keycloakdb:5432/${POSTGRES_DB}
KC_DB_USERNAME=${POSTGRES_USER}
KC_DB_PASSWORD=${POSTGRES_PASSWORD}

# Hostname configuration (adjust for your domain)
KC_HOSTNAME=auth.libresoftware.cloud
KC_HOSTNAME_STRICT=true
# Enable HTTP since Traefik handles HTTPS
KC_HTTP_ENABLED=true

# Proxy configuration (for Traefik reverse proxy)
KC_PROXY_HEADERS=xforwarded

# Logging and monitoring
KC_LOG_LEVEL=info
KC_METRICS_ENABLED=true
KC_HEALTH_ENABLED=true

# Admin credentials (CHANGE THESE IN PRODUCTION!)
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=admin